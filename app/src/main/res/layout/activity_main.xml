<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upc.eseiaat.pma.kmamilles.MainActivity">

    <TextView
        android:id="@+id/label_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kilometres"
        android:textSize="18sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_kilometres"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_kilometres"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_kilometres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btn_a_milles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A MILLES"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_km"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/label_milles" />

    <Button
        android:id="@+id/btn_a_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A KILOMETRES"
        android:layout_marginRight="23dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/btn_a_milles"
        app:layout_constraintBottom_toBottomOf="@+id/btn_a_milles"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/label_milles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Milles"
        android:textSize="18sp"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_milles"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_milles"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/edit_milles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_a_km" />

</android.support.constraint.ConstraintLayout>
